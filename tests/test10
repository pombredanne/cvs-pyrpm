#!/bin/sh

# best run from pyrpm/scripts with "../test/test10"
test -x ./pyrpmyum || exit 1

umask 022

dokill() {
    killall cups-config-daemon 2> /dev/null
    killall minilogd 2> /dev/null
}

preparechroot() {
    fuser -k $1 2> /dev/null
    nodev=
    if test x$1 = x--nodev ; then
        nodev=--nodev
    fi
    shift
    dokill
    umount $1/dev
    umount $1/proc
    mkdir -p $1/{dev,etc/sysconfig,tmp,proc,var/tmp}
    chmod 1777 $1/tmp
    touch $1/etc/fstab
    echo "NETWORKING=yes" > $1/etc/sysconfig/network
    if test x$nodev = x ; then
        mount --bind /dev $1/dev
    else
        mknod -m 0666 $1/dev/null c 1 3
        mknod -m 0666 $1/dev/zero c 1 5
        mknod -m 0644 $1/dev/random c 1 8
        mknod -m 0644 $1/dev/urandom c 1 9
        mknod -m 0660 $1/dev/ttyS0 c 4 64
        mknod -m 0660 $1/dev/ttyS1 c 4 65
        mknod -m 0666 $1/dev/ptmx c 5 2
        mknod -m 0660 $1/dev/md0 b 9 0
        mknod -m 0660 $1/dev/loop0 b 7 1
    fi
    mount -t proc proc $1/proc
}

cleanchroot() {
    umount -f $1/mnt/raid
    test -d $1/dev  || return
    test -d $1/proc || return
    dokill
    umount $1/dev  2> /dev/null
    umount $1/proc 2> /dev/null
    umount $1/mnt/raid 2> /dev/null
    test -d $1/proc/1 -o -e $1/dev/pts/1 \
        && { echo "umount did not work for $1"; exit 1; }
    if mount | grep -q $1 ; then
        echo "umount did not work for $1"; exit 1;
    fi
    rm -fr $1
}

doinstall() {
    nodev=
    if test x$1 = x--nodev ; then
        nodev=--nodev
        shift
    fi
    test -d "$1" || { echo "No dir $1 exists."; return; }
    cleanchroot $2
    preparechroot $nodev $2
    sync
    if test x$3 = xrpm ; then
        { time rpm -U --nodigest --nosignature --root=$2 $1/*.rpm; } 2>&1 \
            | tee $2.LOG.install
    else
        { time $PYRPMYUM -r $2 install $1; } 2>&1 \
            | tee $2.LOG.install
    fi
    sync
    dokill
}

genyumconf() {
test -n "$3" && {
    mkdir -p $2/mnt/raid
    mount porky.stuttgart.redhat.com:/mnt/raid $2/mnt/raid
    cp /etc/resolv.conf $2/etc/
}
rm -f $2/etc/yum.repos.d/*
rm -f $2/var/lib/rpm/__*
cat > $2/etc/yum.conf <<EOF
[main]
cachedir=/var/cache/yum
debuglevel=0
errorlevel=0
logfile=/var/log/yum.log
gpgcheck=0
assumeyes=1
tolerant=1
exactarch=0
obsoletes=1
distroverpkg=fedora-release
retries=10
pkgpolicy=newest

EOF
test -n "$3" && cat >> $2/etc/yum.conf <<EOF
[base]
name=Fedora Linux Core $1 - \$basearch
baseurl=file://localhost$FEDORA/$1/\$basearch/os/

EOF
cat >> $2/etc/yum.conf <<EOF
[updates]
name=Fedora Linux Core $1 - \$basearch - Updates
baseurl=file://localhost$FEDORA/updates/$1/\$basearch/
EOF
}

DATA=/mnt/data/laroche

if test x$1 = xclean ; then
    if test -n "$2" ; then
        cleanchroot $2
    else
        for i in $DATA/* ; do
            test -d "$i" || continue
            cleanchroot $i
        done
    fi
    exit 0
fi

RELEASED=/mnt/raid/redhat/released
FEDORA=/mnt/raid/fedora
#FEDORA=/mnt/data/laroche/fedora
RPMS=RedHat/RPMS
PYRPMYUM="./pyrpmyum -y --autoerase"
# Specify if updates to newer releases should be done.
RELEASEUPDATE=0

# Currently non-working:
#doinstall --nodev $RELEASED/RHL-5.2/GOLD/i386/$RPMS $DATA/5.2
#doinstall --nodev $RELEASED/RHL-6.2/GOLD/i386/$RPMS $DATA/6.2
#doinstall --nodev $RELEASED/RHEL-2.1/U6/AS/i386/tree/$RPMS $DATA/2.1-U6-i386

if false ; then
doinstall --nodev $RELEASED/RHEL-3/U3/AS/i386/tree/$RPMS $DATA/3-U3-i386
doinstall --nodev $RELEASED/RHEL-3/U4/AS/i386/tree/$RPMS $DATA/3-U4-i386
doinstall --nodev /mnt/raid/trees/RHEL3U5/i386/$RPMS $DATA/3-U5-i386
doinstall $RELEASED/RHEL-4/Beta2/AS/i386/tree/$RPMS $DATA/4-Beta2-i386
doinstall /mnt/raid/trees/RHEL4/i386/$RPMS $DATA/4-trees-i386
doinstall /mnt/redhat/rel-eng/RHEL4-re1129.0/i386/i386-AS/$RPMS $DATA/4-i386
fi

# Fedora Core 1
if false ; then
IN=$DATA/FC1-i386
# Raw FC1 install
doinstall --nodev $FEDORA/1/i386/os/Fedora/RPMS $IN
# Update FC1 to updates
{ time $PYRPMYUM -r $IN update $FEDORA/updates/1/i386 ; } 2>&1 | tee $IN.LOG.update
# Update FC1 to testing
{ time $PYRPMYUM -r $IN update $FEDORA/updates/testing/1/i386 ; } 2>&1 | tee $IN.LOG.update.1
if test $RELEASEUPDATE = 1 ; then
# Update FC1 to FC2+updates
{ time $PYRPMYUM -r $IN update $FEDORA/2/i386 $FEDORA/updates/2/i386 ; } 2>&1 | tee $IN.LOG.update.2
# Update to FC3+updates
{ time $PYRPMYUM -r $IN update $FEDORA/3/i386 $FEDORA/updates/3/i386 ; } 2>&1 | tee $IN.LOG.update.3
# Update to FC-development
{ time $PYRPMYUM -r $IN update $FEDORA/development/i386/Fedora/RPMS ; } 2>&1 | tee $IN.LOG.update.4
fi
fi

# Fedora Core 2
if false ; then
IN=$DATA/FC2-i386
# Raw FC2 install
doinstall --nodev $FEDORA/2/i386/os/Fedora/RPMS $IN
# Update FC2 to updates
{ time $PYRPMYUM -r $IN update $FEDORA/updates/2/i386 ; } 2>&1 | tee $IN.LOG.update
# Update FC2 to testing
{ time $PYRPMYUM --nofileconflicts -r $IN update $FEDORA/updates/testing/2/i386 ; } 2>&1 | tee $IN.LOG.update.1
if test $RELEASEUPDATE = 1 ; then
# Update FC2 to FC3+updates
{ time $PYRPMYUM -r $IN update $FEDORA/3/i386 $FEDORA/updates/3/i386 ; } 2>&1 | tee $IN.LOG.update.2
# Update to FC-development
{ time $PYRPMYUM -r $IN update $FEDORA/development/i386/Fedora/RPMS ; } 2>&1 | tee $IN.LOG.update.3
fi
fi

# Fedora Core 3
if false ; then
IN=$DATA/FC3-i386
# Raw FC3 install
doinstall         $FEDORA/3/i386/os/Fedora/RPMS $IN
# Update FC3 to updates
{ time $PYRPMYUM -r $IN update $FEDORA/updates/3/i386 ; } 2>&1 | tee $IN.LOG.update
# Update FC3 to testing
{ time $PYRPMYUM -r $IN update $FEDORA/updates/testing/3/i386 ; } 2>&1 | tee $IN.LOG.update.1
if test $RELEASEUPDATE = 1 ; then
# Update to FC-development
{ time $PYRPMYUM -r $IN update $FEDORA/development/i386/Fedora/RPMS ; } 2>&1 | tee $IN.LOG.update.2
fi
fi

# Fedora Core development
if false ; then
doinstall $FEDORA/development/i386/Fedora/RPMS $DATA/FC4-i386
ln -sf $FEDORA/development/i386/Fedora/RPMS /tmp/n
doinstall /tmp/n $DATA/FC4-i386-rpm rpm
fi

# Fedora Core 1/2/3 with /bin/rpm and updates with yum
if false ; then
NODEV="--nodev"
for i in 1 2 3 ; do
    test $i = 3 && NODEV=
    IN=$DATA/FC$i-i386-rpm
    doinstall $NODEV $FEDORA/$i/i386/os/Fedora/RPMS $IN rpm
    genyumconf $i $IN
    { time chroot $IN yum update; } 2>&1 | tee $IN.LOG.update
done
fi

if false ; then
IN=$DATA/FC1-2-3-i386
# Install FC1 with all updates
cleanchroot $IN
preparechroot --nodev $IN
genyumconf 1 $IN withbase
{ time $PYRPMYUM -c $IN/etc/yum.conf -r $IN install "*"; } 2>&1 | tee $IN.LOG.install
# Update to FC2 with all updates
genyumconf 2 $IN withbase
{ time $PYRPMYUM -c $IN/etc/yum.conf -r $IN update "*"; } 2>&1 | tee $IN.LOG.update.1
# Update to FC3 with all updates
genyumconf 3 $IN withbase
{ time $PYRPMYUM -c $IN/etc/yum.conf -r $IN update "*"; } 2>&1 | tee $IN.LOG.update.2
fi
